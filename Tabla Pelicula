CREATE TABLE PELICULA
(ID_PELICULA INTEGER, 
TITULO VARCHAR2(120),
DIRECTOR VARCHAR2(120), 
SINOPSIS VARCHAR2(255),
CONSTRAINT PK_ID_PELICULA PRIMARY KEY (ID_PELICULA));



CREATE TABLE HORARIO
(ID_HORARIO INTERGER, 
ID_PELICULA INTERGER,
FECHA DATE,
CONSTRAINT PK_ID_HORARIO PRIMARY KEY (ID_HORARIO),
CONSTRAINT FK1_ID_PELICULA FOREIGN KEY(ID PELICULA) REFERENCES PELICULA(ID_PELICULA));



/*GENERAMOS LA SECUENCIA CORRESPONDIENTE A LA TABLA PELICULA*/
/*TODAS LAS TABLAS QUE CONTENGAN AUTOINCREMENTO, HAY QUE CREAR SECUENCIAS*/

CREATE SEQUENCE SECUENCIA_PELICULA
START WITH 1
INCREMENT BY 1
NOMAXVALUE;
